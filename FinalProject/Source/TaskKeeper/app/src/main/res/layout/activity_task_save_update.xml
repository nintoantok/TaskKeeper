<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/task_keeper_white"
    tools:context="gyri.taskkeeper.TaskSaveUpdateActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/task_top_layout">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:hint="task title"
            android:id="@+id/task_title" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_description"
            android:fontFamily="sans-serif-condensed"
            android:hint="description"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Start Date:"
                android:background="@color/task_keeper_greenshade"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/start_date" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Start Time:"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="10dp"
                android:background="@color/task_keeper_greenshade"
                android:id="@+id/start_time" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Stop Date:"
                android:id="@+id/stop_date"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="10dp"
                android:background="@color/task_keeper_greenshade"
                android:layout_weight="1"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Stop Time:"
                android:id="@+id/stop_time"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="10dp"
                android:background="@color/task_keeper_greenshade"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/task_save"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_horizontal"
            android:background="@color/task_keeper_blue"
            android:layout_margin="10dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
